<core:FragmentDefinition xmlns:core="sap.ui.core"
                         xmlns:f="sap.ui.layout.form" xmlns="sap.m">
    <Select items="{/cities}">
                        <items>
                            <core:Item key="{name}" text="{name}" />
                        </items>
                    </Select>
                    <ComboBox items="{/cities}">
                        <items>
                            <core:Item key="{name}" text="{name}" />
                        </items>
                    </ComboBox>
                    <MultiComboBox items="{/cities}">
                        <items>
                            <core:Item key="{name}" text="{name}" />
                        </items>
                    </MultiComboBox>
</core:FragmentDefinition>                         
